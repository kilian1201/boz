<html>
  <%include search.ejs%>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css">
        <script defer="" src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <link rel="stylesheet" href="./topbot.css">
  <title>Discord bots Club</title>
      <div class="jumbotron" style="background-color:#fff;">
              <strong class="display-4">Discord bots Club</strong><hr>
           
          </div>
          <div class="column">
                    <i class="fas fa-plus icon is-medium"></i> <strong class="title">Certified Top bots</strong> <br>
                  <small class="text-muted">See our certified bots added to the community.</small>
          </div>
<br>

  
<div class="container"> 
      <div class="row">
      <div class="card-columns">
        
                                        <% var added = 0; %>
                                    <% for(var i=0; i<bots.length; i++) {%>
                                        <% added++; %>
                              <% if(bot.users.get(bots[i].id)) {%>
      
      <div class="card mt-5" style="width: 18rem;">
        <img class="card-img-top" src="https://discord-assist.tk/api/discord/avatar/<%= bots[i].id%>">
        <div class="card-body">
          <h5 class="card-title text-center">
            <%= bots[i].name %>
          </h5>
<br>
                                   <center>       <%if (bot.users.get(bots[i].id).presence.status === 'idle') {%>
                                                      <span class="badge badge-pill badge-warning">Idle</span> 
                                                  <%}%>
                                                  <%if (bot.users.get(bots[i].id).presence.status === 'online') {%>
                                                      <span class="badge badge-pill  badge-success">Active</span> 
                                                  <%}%>
                                                  
                                                  <%if (bot.users.get(bots[i].id).presence.status === 'dnd') {%>
                                                      <span class="badge badge-pill badge-danger">Dnd</span> 
                                                  <%}%>
                                                  <%if (bot.users.get(bots[i].id).presence.status === 'offline') {%>
                                                      <span class="badge badge-pill badge-light">Away</span>
                                                  <%}%>
                                                  
                                                  <%if(bots[i].servers){%>
                                                    <%if(bots[i].servers == 1) {%>
                           
                                                      <span class="badge badge-white"><%=bots[i].servers%> Server</span> 
                                                    <%} else {%>
                                                      <span class="badge badge-white"><%=bots[i].servers%> Servers</span> 
                                                    <%}%>
          <%}%></center>
          <hr>
                                <p class="card-text text-center"><%= bots[i].desc %></p>
         <center> <a href="https://discordapp.com/api/oauth2/authorize?client_id=<%= bots[i].id %>&scope=bot" class="btn btn-primary">Invite</a>
          <a href="/bots/<%= bots[i].id %>" class="btn btn-primary">View</a></center>
        </div>
      </div>

                                                      <% if(added == 5) {%>
                                            <% added = 0; %>
                                            <% } %>
                                          <% } %>
                                        <% } %>
        
      </div>
      </div>
      </div> 
      
  <br>
  <hr>
  <center><a href="https://gd-list.info/"><img src="https://cdn.discordapp.com/attachments/529453897333473300/529650724796104724/image.gif" width="700" height="100" style="border-radius:10px;filter: drop-shadow(0px 4px 5px rgba(0, 0, 0, 0.65));"></a></center>
  <hr>
  <br>
</html> 